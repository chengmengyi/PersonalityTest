<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="224dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/nv_native_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@drawable/bg_bae4cd_8dp_solid">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/mv_ad_cover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/iv_ad_logo"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/iv_ad_logo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:round="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ad_action"
                android:layout_width="79dp"
                android:layout_height="32dp"
                android:text="Install"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_ad_logo"
                android:background="@drawable/bg_191b1d_8dp_solid"
                app:layout_constraintBottom_toBottomOf="@id/iv_ad_logo"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ad_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#525050"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:text="Teamfight Tactics"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@id/iv_ad_logo"
                app:layout_constraintLeft_toRightOf="@id/iv_ad_logo"
                app:layout_constraintRight_toLeftOf="@id/iv_ad_flag"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_ad_flag"
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_home_ad_flag"
                app:layout_constraintTop_toTopOf="@id/tv_ad_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_ad_title"
                app:layout_constraintRight_toLeftOf="@id/tv_ad_action"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ad_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#858585"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Download it to your moblâ€¦"
                app:layout_constraintLeft_toRightOf="@id/iv_ad_logo"
                app:layout_constraintTop_toBottomOf="@id/tv_ad_title"
                app:layout_constraintRight_toLeftOf="@id/tv_ad_action"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_ad_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_ad_default"/>
</RelativeLayout>